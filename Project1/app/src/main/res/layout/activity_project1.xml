<?xml version="1.0" encoding="utf-8"?>
<TableLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:stretchColumns="0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">
    <TableRow>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center">
            <Button android:id="@+id/button00"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="" android:layout_width="100dp"/>
            <Button android:id="@+id/button01"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="" android:layout_width="100dp"/>
            <Button android:id="@+id/button02"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="" android:layout_width="100dp"/>
        </LinearLayout>
    </TableRow>
    <TableRow>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center">
            <Button android:id="@+id/button10"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="" android:layout_width="100dp"/>
            <Button android:id="@+id/button11"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="" android:layout_width="100dp"/>
            <Button android:id="@+id/button12"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="" android:layout_width="100dp"/>
        </LinearLayout>
    </TableRow>
    <TableRow>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center">
            <Button android:id="@+id/button20"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="" android:layout_width="100dp"/>
            <Button android:id="@+id/button21"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="" android:layout_width="100dp"/>
            <Button android:id="@+id/button22"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="" android:layout_width="100dp"/>
        </LinearLayout>
    </TableRow>
    <TableRow>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center">
            <TextView
                android:id="@+id/winTextView"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text=""
                android:textColor="@color/red"
                android:layout_width="fill_parent" />
        </LinearLayout>
    </TableRow>
    <TableRow>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center">
            <Button
                android:id="@+id/buttonRestart"
                android:textSize="20pt"
                android:layout_height="100dp"
                android:text="Play again"
                android:textColor="@color/black"
                android:layout_width="fill_parent"
                android:enabled="false"
                android:visibility="invisible"/>
        </LinearLayout>
    </TableRow>
</TableLayout>
